<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SunnyAboutFragment">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/greenhouse"
        android:scaleType="centerCrop" />

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Main Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:text="Sunny is a cheerful, playful dog who loves naps and chasing squirrels. Sunnyâ€™s favorite snack is peanut butter, and he always greets guests with a wagging tail!"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@android:color/black"
            android:background="@drawable/button_big1"
            android:scrollbars="vertical" />

        <!-- Back to Menu Button -->
        <Button
            android:id="@+id/nav_about_to_menu_button"
            android:layout_width="205dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_big2"
            android:padding="12dp"
            android:text="Back to Menu"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>
</FrameLayout>
