<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/sunnyMenuFragment">

    <fragment
        android:id="@+id/sunnyMenuFragment"
        android:name="com.example.sunnyapplication.SunnyMenuFragment"
        android:label="fragment_sunny_menu"
        tools:layout="@layout/fragment_sunny_menu" >
        <action
            android:id="@+id/action_sunnyMenuFragment_to_sunnyAboutFragment"
            app:destination="@id/sunnyAboutFragment" />
        <action
            android:id="@+id/action_sunnyMenuFragment_to_sunnyDressUpFragment"
            app:destination="@id/sunnyDressUpFragment" />
        <action
            android:id="@+id/action_sunnyMenuFragment_to_sunnyGalleryFragment"
            app:destination="@id/sunnyGalleryFragment" />
    </fragment>
    <fragment
        android:id="@+id/sunnyAboutFragment"
        android:name="com.example.sunnyapplication.SunnyAboutFragment"
        android:label="fragment_sunny_about"
