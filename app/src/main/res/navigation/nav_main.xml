        <action
            android:id="@+id/action_sunnyAboutFragment_to_sunnyMenuFragment"
            app:destination="@id/sunnyMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/sunnyDressUpFragment"
        android:name="com.example.sunnyapplication.SunnyDressUpFragment"
        android:label="fragment_sunny_dress_up"
        tools:layout="@layout/fragment_sunny_dress_up" >
        <action
            android:id="@+id/action_sunnyDressUpFragment_to_sunnyMenuFragment"
            app:destination="@id/sunnyMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/sunnyGalleryFragment"
        android:name="com.example.sunnyapplication.SunnyGalleryFragment"
        android:label="fragment_sunny_gallery"
        tools:layout="@layout/fragment_sunny_gallery" >
        <action
            android:id="@+id/action_sunnyGalleryFragment_to_sunnyMenuFragment"
            app:destination="@id/sunnyMenuFragment" />
    </fragment>
</navigation>